# Juicebox Omega Configuration
# Copy this file to .env and customize as needed

# Directory to serve files from
FILES_DIR=./files

# Public file server configuration
PUBLIC_HOST=127.0.0.1
PUBLIC_PORT=4848

# Admin API server configuration (keep on localhost for security!)
ADMIN_HOST=127.0.0.1
ADMIN_PORT=4849

# Maximum upload size in bytes (default: 10GB)
# 10GB = 10737418240
# 5GB  = 5368709120
# 1GB  = 1073741824
MAX_UPLOAD_SIZE=10737418240

# Number of Tokio worker threads (default: 8)
# Set to number of CPU cores for best performance
WORKER_THREADS=8

# Logging level (trace, debug, info, warn, error)
RUST_LOG=info
